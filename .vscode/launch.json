    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/audify/start.py",
            "console": "integratedTerminal",
            "args": [
                "data/ebooks/tmp.epub",
                "-l",
                "pt",
            ],
        },
        {
            "name": "Debug podcast",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/audify/create_podcast.py",
            "console": "integratedTerminal",
            "args": [
                "data/test1.pdf",
                "-l",
                "en",
                "--llm-model",
                "qwen3:30b",
                "--confirm"
            ],
        }
    ]
}